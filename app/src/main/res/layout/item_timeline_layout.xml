<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:contentPadding="7dp"
    app:cardCornerRadius="5dp"
    android:layout_width="150dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardElevation="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textStyle="normal|bold"
            android:textColor="@color/dark_gray" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pho"
            android:id="@+id/imageViewCover"
            android:adjustViewBounds="true"
            android:scaleType="center" />

        <View android:layout_height="1dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_width="match_parent" android:background="@color/colorLine"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtLike"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:drawablePadding="2dp"
                android:textAlignment="center"
                android:drawableLeft="@drawable/heart_outline"
                android:textColor="@color/dark_gray" />

            <TextView
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtComment"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_chat_bubble_outline_black_24dp"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/dark_gray" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>